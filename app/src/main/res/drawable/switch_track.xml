<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:state_checked="true"-->
    <!--android:drawable="@drawable/back_switch_b"></item>-->
    <!--<item android:state_checked="false"-->
    <!--android:drawable="@drawable/back_switch_g"></item>-->

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_size_12" />
            <size android:width="@dimen/widget_size_50" android:height="@dimen/widget_size_24" />
            <solid android:color="#19AFDB" />
            <stroke android:width="@dimen/widget_size_1" android:color="#19AFDB" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_size_12" />
            <size android:width="@dimen/widget_size_50" android:height="@dimen/widget_size_24" />
            <solid android:color="#9E9E9E" />
            <stroke android:width="@dimen/widget_size_1" android:color="#9E9E9E" />
        </shape>
    </item>
</selector>